  <body class="bg-light">
    <div class="container">
  <div class="py-5 text-center">
    <img class="d-block mx-auto mb-4" src="/stylesheets/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
    <h2>Sign Up</h2>
    <p class="lead">Welcome to signup page</p>
  </div>

  <div class="input">
    <div class="container">
      <h4 class="mb-3">Write Information</h4>
      <form class="needs-validation" action="/auth/signup" method="post" novalidate>
        <div class="mb-3">
          <label for="Name">Name</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="name required" value="" required>
          <div class="invalid-feedback">
            Valid name is required.
          </div>
        </div>
        <hr class="mb-4">
        <div class="mb-3">
          <label for="id">ID</label>
          <div class="input-group">
            <input type="text" class="form-control" id="id" name="id" placeholder="id required" required>
            <div class="invalid-feedback">
              Your id is required.
            </div>
          </div>
        </div>
        <hr class="mb-4">
        <div class="mb-3">
          <label for="password">Password</label>
          <div class="input-group">
            <input type="password" class="form-control" id="password" name="password" placeholder="pw required" required>
            <input type="hidden" id="submitPassword" name="submitPassword">
            <div class="invalid-feedback">
              Your password is require.
            </div>
          </div>
        </div>
        <hr class="mb-4">
        <div class="mb-3">
          <label for="checkPassword">Check Password</label>
          <div class="input-group">
            <input type="password" class="form-control" id="checkPassword" placeholder="pw check required" required>
            <div class="invalid-feedback">
              Check password is not correct.
            </div>
          </div>
        </div>
        <hr class="mb-4">
        <div class="mb-3">
          <label for="email">Email <span class="text-muted">(Optional)</span></label>
          <input type="email" class="form-control" id="email" name="email" placeholder="you@example.com">
          <div class="invalid-feedback">
            Please enter a valid email address.
          </div>
        </div>
         <hr class="mb-4">
        <button class="btn btn-primary btn-lg btn-block" type="submit">Continue to Sign Up</button>
      </form>
    </div>
  </div>

  <footer class="my-5 pt-5 text-muted text-center text-small">
