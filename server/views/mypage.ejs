    <title><%= title %></title>
    <script>
      var msg = '<%=msg%>';
      if(msg){
        alert(msg);
      }
    </script>
    <!-- Bootstrap core CSS -->
    <link href="/stylesheets/assets/dist/css/bootstrap.css" rel="stylesheet">

    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
